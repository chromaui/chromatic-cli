{
  "exclude": ["node_modules"],
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    // Override module/moduleResolution since we're using tsup/esbuild
    "module": "es2022",
    "moduleResolution": "Bundler",
    "strict": false,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "types": ["webpack-env"],
    "lib": ["es5", "es6", "dom"]
  }
}
